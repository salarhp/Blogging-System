<h2 class="page-header">Manage users  <%= link_to "Create New", new_admin_user_path ,class: "btn btn-success" %> </h2>
<%if @users.exists?%>

    <table class="table table-striped">
        <tr>
            <th> name </th>
            <th> email </th>
            <th> date create </th>
            <th>actions</th>
        </tr>
        <% @users.each do |user| %>
            <tr>
                <td> <%= user.name %> </td>
                <td> <%= user.email %>
                <td> <%= user.created_at.to_time.strftime('%B %e at %l:%M %p') %> </td>
                <td> <%= link_to "Edit", edit_admin_user_path(user),class:'btn btn-primary' %> <%= link_to "Delete", admin_user_path(user),class:'btn btn-danger', method: :delete, data: {confirm: 'are you sure?'} %> </td>
            </tr>
        <%end%>
    </table>
    <%= will_paginate @posts %>
<% else %>
    <p> no users </p>
<% end %>